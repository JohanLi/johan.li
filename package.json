{
  "name": "johan.li",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "start": "webpack-dev-server --hot --env.development",
    "start:prod": "npm run build && node build/server/",
    "build": "rm -rf ./build && webpack --mode production",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:lint": "eslint ./src/**/*.{ts,tsx}",
    "test:tsc": "tsc --skipLibCheck"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-helmet-async": "^1.0.4",
    "react-router-dom": "^5.1.2",
    "react-syntax-highlighter": "^12.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/classnames": "^2.2.9",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-syntax-highlighter": "^11.0.4",
    "@types/react-test-renderer": "^16.9.2",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "file-loader": "^5.1.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "imagemin-webp": "^5.1.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "react-hot-loader": "^4.12.19",
    "react-test-renderer": "^16.13.0",
    "sass-loader": "^8.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-node-externals": "^1.7.2"
  },
  "pre-commit": [
    "lint-staged",
    "test",
    "test:lint",
    "test:tsc"
  ],
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true
        }
      ]
    },
    "overrides": [
      {
        "files": "*.test.{ts,tsx}",
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": "defaults"
        }
      ]
    ],
    "plugins": [
      "react-hot-loader/babel"
    ],
    "compact": false
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.(jpg|png|scss)$": "identity-obj-proxy"
    }
  }
}
