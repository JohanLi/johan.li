{
  "name": "johan.li",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "start": "webpack-dev-server --hot --env.development",
    "start:prod": "npm run build && node build/server/",
    "build": "rm -rf ./build && webpack --mode production",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:lint": "eslint ./src/**/*.{ts,tsx}",
    "test:tsc": "tsc --skipLibCheck"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "prismjs": "^1.21.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet-async": "^1.0.6",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/classnames": "^2.2.10",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/prismjs": "^1.16.1",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-test-renderer": "^16.9.3",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-prismjs": "^2.0.1",
    "css-loader": "^4.2.1",
    "eslint": "^7.7.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.8",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "imagemin-webp": "^6.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.10.0",
    "node-sass": "^4.14.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.21",
    "react-test-renderer": "^16.13.1",
    "sass-loader": "^9.0.3",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-node-externals": "^2.5.1"
  },
  "pre-commit": [
    "lint-staged",
    "test",
    "test:lint",
    "test:tsc"
  ],
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true
        }
      ]
    },
    "overrides": [
      {
        "files": "*.test.{ts,tsx}",
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": "defaults"
        }
      ]
    ],
    "plugins": [
      "react-hot-loader/babel",
      [
        "prismjs",
        {
          "languages": [
            "javascript",
            "jsx",
            "python",
            "html",
            "handlebars"
          ],
          "theme": "default",
          "css": true
        }
      ]
    ],
    "compact": false
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.(jpg|png|scss)$": "identity-obj-proxy"
    }
  }
}
